# -*- conf -*-
MODE=production
# MODE=development

HOST=127.0.0.1
# HOST=0.0.0.0
PORT=1338

LOG_TYPE=all
# LOG_TYPE=disk
# LOG_TYPE=stderr
# LOG_TYPE=none
LOG_PATH=logs/lighthouse.log

AUTH_TYPE=basic
# AUTH_TYPE=none
AUTH_USER=admin
AUTH_PASS=password

DB_NAME=
DB_USER=anon
DB_PASS=
DB_SOCK=/run/mysqld/mysqld.sock
# DB_HOST=127.0.0.1:3306
DB_CHARSET=utf8mb4
DB_TZ=UTC

MAIL_TYPE=smtp
# MAIL_TYPE=none
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

NOTIFICATION_TYPE=mail
# NOTIFICATION_TYPE=none
NOTIFICATION_FROM_HEADER="lighthouse <example@example.com>"
NOTIFICATION_FROM_ADDRESS=lighthouse@example.com
NOTIFICATION_TO_HEADER='alerts <alerts@example.com>'
NOTIFICATION_TO_ADDRESS=alerts@example.com

LOCAL_TZ=Europe/London

# Reload the browser when the development webserver is restarted.
# Relevant during development only.
# LIVE_RELOAD=true
